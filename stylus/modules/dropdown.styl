.dropdown
	position: fixed
	background: white
	top: auto
	right: 0
	left: 0
	bottom: 0
	z-index: 2
	color: black
	text-align: center
	padding: 24px 0
	font-size: 20px
	text-rendering: geometricPrecision
	
	&:hover
		.dropdown-list-container
				opacity: 1
				pointer-events: initial
		 
	
	@media tablet
		position: absolute
		background: transparent
		top: 0
		right: 0
		left: auto
		bottom: auto
		color: white
		padding: 1px 0 25px

		a
			color: white

	.dropdown-current
		cursor: pointer
		display: inline
		
	.arrow
		width: 0
		height: 0
		border-style: solid
		border-width: 6px 5px 0 5px
		border-color: black transparent transparent transparent
		display: inline-block
		
		@media tablet
			border-color: white transparent transparent transparent
			
	.dropdown-list-container
		background: white
		opacity: 0
		position: absolute
		top: auto
		left: 0
		right: 0
		bottom: 74px
		pointer-events: none
		box-shadow(none)
		border-radius(none)
		transition( opacity 0.2s ease-in-out)
		
		@media tablet
			min-width: 180px
			top: 35px
			left: auto
			right: 0
			bottom: auto
			border-radius($border-radius)
			box-shadow(0px 0px 1px 0px rgba(0 0 0 0.2))
			
		&:hover
			opacity: 1
		
		&:focus
			pointer-events: none
			opacity: 0
		
		.arrow
			border-color: white transparent transparent transparent
			position: absolute
			right: auto
			display: none
			transform(none)
			
			@media tablet
				top: -6px
				right: 35px
				display: block
				transform(rotate(180deg))
	
	.dropdown-list
		color: $color-text-regular
		max-height: 50vh
		height: auto
		overflow: scroll
		cursor: pointer
		transition(color 0.2s ease-in-out)
		
		.dropdown-list-item
			padding: 0 20px 10px
			font-size: 14px
			text-align: center
			
			@media tablet
				text-align: left
			
			&:first-child
				padding-top: 10px
				
			&:hover
				color: $color-text-light

		